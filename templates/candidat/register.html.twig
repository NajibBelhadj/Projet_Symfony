{% extends 'authbaseC.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="container">
      <div class="forms-container">
        <div class="signin-signup">
            

                {{ form_start(registrationForm, {'label_attr': {'class': 'sign-in-form'}}) }}
                    <h2 class="title">Sign up</h2>
                    <div class="input-field"><i class="fas fa-user"></i>{{ form_widget(registrationForm.nom,  {'attr': {'placeholder': 'Saisie Votre Nom'}}) }}</div>
                    <div class="input-field"><i class="fas fa-user"></i>{{ form_widget(registrationForm.prenom, {'attr': {'placeholder': 'Saisie Votre Pr√©nom'}}) }}</div>
                    <div class="input-field"><i class="fas fa-envelope"></i>{{ form_widget(registrationForm.email, {'attr': {'placeholder': 'Saisie Votre Email'}}) }}</div>
                    <div class="input-field"><i class="fas fa-lock"></i>{{ form_widget(registrationForm.plainPassword, {
                        
                        'attr': {'placeholder': 'Saisie Votre Password'}
                    })}}</div>
                    {{ form_widget(registrationForm.agreeTerms) }}
                    <div>
                        <label class="form-check-label" for="invalidCheck">
                                     Agree to terms and conditions
                        </label>
                    </div>
                    <button  type="submit" class="btn">Register</button>
                    <p class="social-text">Or Sign up with social platforms</p>
                    <div class="social-media">
                    <a href="#" class="social-icon">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fab fa-google"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                    </div>
                {{ form_end(registrationForm) }}
                        </div>
            </div>

            <div class="panels-container">
                <div class="panel left-panel">
                <div class="content">
                    <a href="/login"><button style="margin-left: -350%" class="btn transparent" id="sign-in-btn">
                    Sign in
                    </button></a>
                </div>
                <img src="img/register.svg" class="image" alt="" />
                </div>
            </div>
            </div>


{% endblock %}
