{% extends 'baseHome.html.twig' %}

{% block title %}new Offre{% endblock %}

{% block body %}
        <div>
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" style="margin-top: 10px">Ajouter un Offre
                  </h5>
                </div>
                <div class="modal-body">
                  <div class="column" id="main" >
                    <form action="{{ path("edit_experience" , {'id': experience.id })}}" enctype="multipart/form-data" method="post">
                        <div class="form-group col-12">
                            <label for="nom">Post</label>
                            <input type="text" name="post" class="form-control" placeholder="post" value="{{experience.post}}" required>
                        </div>
    
                        <div class="form-group col-12">
                            <label for="nom">Description</label>
                            <textarea  class="form-control" name="description" rows="4" cols="50"  required>{{experience.description}}</textarea>
                        </div>
                        <div class="form-group col-12">
                            <label for="nom">Date</label>
                            <input type="text" name="date" class="form-control" value="{{experience.date}}" placeholder="Facebook" >
                        </div>

                        <div class="modal-footer">
                            <button type="submit" class="btn btn" style="background-color :#007bff; color: beige;">Modifier</button>
                        </div>
                    </form>
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success"  >
                        {{ message }}
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger"  >
                           {{ message }}
                        </div>
                    {% endfor %}
                  </div>

                </div>
                <div class="modal-footer">
                  
                </div>
              </div>
            </div>
          </div>
{% endblock %}
