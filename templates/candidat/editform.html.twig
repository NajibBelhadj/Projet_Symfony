{% extends 'baseHome.html.twig' %}

{% block title %}new Offre{% endblock %}

{% block body %}
        <div>
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" style="margin-top: 10px">Ajouter un Offre
                  </h5>
                </div>
                <div class="modal-body">
                  <div class="column" id="main" >
                    <form action="{{ path("edit_formation" , {'id': formation.id })}}" enctype="multipart/form-data" method="post">
                        <div class="form-group col-12">
                            <label for="nom">Ecole</label>
                            <input type="text" name="ecole" class="form-control" placeholder="Ecole" value="{{formation.ecole}}" required>
                        </div>
    
                        <div class="form-group col-12">
                            <label for="nom">Diplome</label>
                            <input type="text" name="diplome" class="form-control" placeholder="Diplome" value="{{formation.diplome}}" required>
                        </div>
                        <div class="form-group col-12">
                            <label for="nom">Année</label>
                            <input type="text" name="annee" class="form-control" value="{{formation.annee}}" placeholder="Année" >
                        </div>

                        <div class="modal-footer">
                            <button type="submit" class="btn btn" style="background-color :#007bff; color: beige;">Modifier</button>
                        </div>
                    </form>
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success"  >
                        {{ message }}
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger"  >
                           {{ message }}
                        </div>
                    {% endfor %}
                  </div>

                </div>
                <div class="modal-footer">
                  
                </div>
              </div>
            </div>
          </div>
{% endblock %}
