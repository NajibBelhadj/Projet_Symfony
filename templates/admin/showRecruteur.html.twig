{% extends 'AdminBase.html.twig' %}

{% block title %}Modifier Employée!{% endblock %}

{% block body %}
    <div>
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" style="margin-top: 10px">Modifier Employée
                  </h5>
                </div>
                <div class="modal-body">
                  <div class="column" id="main" >
                    <form class="row" method="post">
                        <div class="form-group col-12">
                            <label for="CIN">CIN</label>
                            <input type="number" value="{{ recruteur.recruteur.cin }}" name="cin" class="form-control" placeholder="CIN" required>
                        </div>
                        <div class="form-group col-6">
                            <label for="Nom">Nom </label>
                            <input type="text" name="nom" value="{{ recruteur.nom}}" class="form-control" placeholder="Nom" required>
                        </div>
                        <div class="form-group col-6">
                            <label for="Prénom">Prénom</label>
                            <input type="text" name="prenom" class="form-control" value="{{ recruteur.prenom}}" placeholder="Prénom" required>
                        </div>
                        <div class="form-group col-12">
                            <label for="Email1">E-mail </label>
                            <input type="email" name="email" class="form-control" value="{{ recruteur.email }}" placeholder="E-mail" required>
                        </div>
                        <div class="form-group col-12">
                            <label for="Password">Password</label>
                            <input type="password" name="password" class="form-control" placeholder="Password">
                        </div>

                        <div class="form-group col-12">
                            <label for="responsabilitee">Responsabilitée</label>
                            <input type="text" name="responsabilitee" value="{{ recruteur.recruteur.responsabilite }}" class="form-control" placeholder="responsabilitee" required>
                        </div>
                        <div class="form-group col-6">
                            <label for="telephone">Telephone</label>
                            <input type="text" name="telephone" value="{{ recruteur.recruteur.telephone }}" class="form-control" placeholder="Telephone" required>
                        </div>
                        <div class="form-group col-6 mt-2">
                            <label >Sexe</label>
                            <div id="toastTypeGroup">
                                <!-- /.form-group -->
                                <div class="radio success">
                                <input type="radio"  name="sexe"  id="radio-1" value="Homme" checked>
                                <label for="radio-1">Homme</label>
                                <input class="ml-1"type="radio"  id="radio-2"  name="sexe" value="Femme">
                                <label class="ml-3" for="radio-2">Femme</label>
                                </div>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="submit" class="btn btn" style="background-color :#4caf50; color: beige;">Modifier</button>
                        </div>
                    </form>
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success"  >
                        {{ message }}
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger"  >
                           {{ message }}
                        </div>
                    {% endfor %}
                  </div>

                </div>
                <div class="modal-footer">
                  
                </div>
              </div>
            </div>
          </div>
{% endblock %}